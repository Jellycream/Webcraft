{
    "manifest_version": 2,
    "name": "Webcraft",
    "version": "0.1.0",
    "author": "Max Caplan",

    "description": "A simple clone of minecraft running in a chrome extension",
    "icons": {
        "16": "./resources/icons/icon16.png",
        "48": "./resources/icons/icon48.png",
        "128": "./resources/icons/icon128.png"
    },

    "browser_action": {
        "default_icon": {
            "16": "./resources/icons/icon16.png",
            "24": "./resources/icons/icon24.png",
            "32": "./resources/icons/icon32.png"
        },
        "default_title": "Webcraft",
        "default_popup": "popup.html"
    },


    "background": {
        "scripts": ["./js/background.js"],
        "persistent": false
    }
}